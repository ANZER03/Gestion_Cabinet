<BorderPane prefHeight="600.0" prefWidth="834.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ma.enset.finprojectjavafx.ConsultationController" >
   <center>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="600.0" prefWidth="361.0" styleClass="vbox">
               <children>
                    <GridPane hgap="12.0" prefHeight="285.0" prefWidth="330.0" styleClass="input-section" vgap="33.0">
                        <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="idField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <DatePicker fx:id="datePicker" prefHeight="39.0" prefWidth="219.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Patient:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <ComboBox fx:id="patientComboBox" prefHeight="35.0" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <HBox alignment="CENTER" spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4">
                            <Button fx:id="newBtn" text="New" />
                            <Button fx:id="createBtn" text="Create" />
                            <Button fx:id="updateBtn" disable="true" text="Update" />
                            <Button fx:id="deleteBtn" disable="true" styleClass="btn-danger" text="Delete" />
                        </HBox>
                     <columnConstraints>
                        <ColumnConstraints />
                        <ColumnConstraints />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                     </rowConstraints>
                    </GridPane>
               </children>
            </VBox>
            <VBox prefHeight="600.0" prefWidth="474.0">
               <children>
                    <HBox alignment="CENTER_RIGHT" prefHeight="41.0" prefWidth="474.0" spacing="10.0" styleClass="search-bar">
                        <Label />
                        <TextField fx:id="searchField" prefHeight="27.0" prefWidth="188.0" promptText="Enter description" />
                        <Button text="Search" />
                    </HBox>
                    <TableView fx:id="consultationTable" prefHeight="553.0" prefWidth="474.0">
                        <columns>
                            <TableColumn fx:id="idCol" prefWidth="58.0" text="ID" />
                            <TableColumn fx:id="dateCol" prefWidth="107.0" text="Date" />
                            <TableColumn fx:id="descriptionCol" prefWidth="175.0" text="Description" />
                            <TableColumn fx:id="patientCol" prefWidth="171.0" text="Patient" />
                        </columns>
                    </TableView>
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
